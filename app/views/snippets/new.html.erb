
<h1>New Snippet</h1>
<%= form_for @snippet do |f| %>
<div class="form-group">
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name, {},
                          {class: "form-control"}%>
</div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :work %>
    <%= f.text_area :work, class: "form-control" %>
  </div>

     <div class = "form-group">
       <%= f.submit class: "btn btn-primary" %>
     </div>
   </div>
<% end %>
